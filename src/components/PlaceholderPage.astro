<!-- Match the index hero layout and Tailwind styling -->
<section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20" aria-labelledby="placeholder-hero">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="max-w-4xl mx-auto">
      <h1 id="placeholder-hero" class="text-5xl font-bold text-gray-950 mb-4">
        Make open source sustainability a reality
      </h1>
      <p class="text-2xl font-medium text-gray-700 mb-2">
        See what your dependencies actually need. Sponsor the work. Track measurable impact.
      </p>
      <p class="text-sm text-gray-600 italic mb-8">Launching November 2025</p>

      <!-- Audience Cards (same layout as index) -->
      <div class="grid md:grid-cols-3 gap-6 mb-8" role="list">
        <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
          <h2 class="text-xl font-semibold text-gray-950 mb-2">Open Source Maintainers</h2>
          <p class="text-gray-700 mb-2 flex-grow">Create a wishlist of services, or promote a campaign to support your project's long-term sustainability.</p>
          <div class="text-xs text-gray-600 mt-auto"></div>
        </article>

        <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
          <h2 class="text-xl font-semibold text-gray-950 mb-2">Wishlist Sponsors</h2>
          <p class="text-gray-700 mb-2 flex-grow">Fulfill specific, validated needs in projects you depend on. See exactly how your support creates impact.</p>
          <div class="text-xs text-gray-600 mt-auto"></div>
        </article>

        <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
          <h2 class="text-xl font-semibold text-gray-950 mb-2">Helper Community</h2>
          <p class="text-gray-700 mb-2 flex-grow">Get matched with wishes, share or contribute to campaigns, challenge and include others.</p>
          <div class="text-xs text-gray-600 mt-auto"></div>
        </article>
      </div>
    </div>
  </div>
</section>
