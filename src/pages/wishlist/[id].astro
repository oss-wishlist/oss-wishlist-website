---
import { getBasePath } from '../../lib/paths';
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import { getWishlistById } from '../../lib/db.js';

const basePath = getBasePath();

export const prerender = false;

// Fetch all services from content collection
const allServices = await getCollection('services');
const serviceMap = new Map(allServices.map(service => [service.slug, service]));

// Get the wishlist ID from URL params
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/404');
}

// Fetch from database
let wishlistData = null;

try {
  const wishlist = await getWishlistById(parseInt(id));
  
  if (wishlist) {
    // Map database columns to page data structure
    wishlistData = {
      id: wishlist.id,
      title: wishlist.project_name,
      projectName: wishlist.project_name,
      repositoryUrl: wishlist.repository_url,
      maintainer: wishlist.maintainer_username,
      maintainerAvatar: wishlist.maintainer_avatar_url || `https://github.com/${wishlist.maintainer_username}.png`,
      services: wishlist.wishes || [],
      resources: wishlist.resources || [],
      technologies: wishlist.technologies || [],
      urgency: wishlist.urgency?.toLowerCase() || 'medium',
      projectSize: wishlist.project_size,
      additionalNotes: wishlist.additional_notes,
      additionalContext: wishlist.additional_context,
      status: wishlist.status,
      approved: wishlist.approved,
      created_at: wishlist.created_at.toISOString(),
      updated_at: wishlist.updated_at.toISOString(),
    };
  }
} catch (error) {
  console.error('Error fetching wishlist from database:', error);
}

if (!wishlistData) {
  return Astro.redirect('/404');
}

const urgencyColors = {
  low: 'bg-gray-100 text-gray-700',
  medium: 'bg-gray-200 text-gray-800',
  high: 'bg-gray-600 text-white',
  critical: 'bg-gray-800 text-white'
};
---
<Layout title={`${wishlistData.projectName} Wishlist - OSS Wishlist`} description={`Support ${wishlistData.projectName}`}>
  <!-- Back Navigation -->
  <div class="bg-gray-50 py-4">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <a href={`${basePath}wishlists`} class="text-gray-600 hover:text-gray-700 flex items-center">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Wishlists
      </a>
    </div>
  </div>

  <!-- Project Header -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
          <div class="flex items-start space-x-4 mb-6">
            <div class="w-16 h-16 rounded-full border-2 border-gray-200 bg-gradient-to-br from-purple-400 to-purple-600 flex items-center justify-center">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h1 class="text-4xl font-bold text-gray-900 mb-2">{wishlistData.projectName}</h1>
              
              {/* Package Ecosystems */}
              {wishlistData.technologies && wishlistData.technologies.length > 0 && (
                <div class="text-sm mb-3">
                  <span class="text-gray-600">Package Ecosystems: </span>
                  <span class="font-semibold">{wishlistData.technologies.join(', ')}</span>
                </div>
              )}
            </div>
          </div>
          
          {/* Additional Notes */}
          {wishlistData.additionalNotes && (
            <div class="prose prose-lg max-w-none mt-6">
              <h2>Project Details</h2>
              <p class="text-gray-700 whitespace-pre-wrap">{wishlistData.additionalNotes}</p>
            </div>
          )}
        </div>
        
        <!-- Support CTA Sidebar -->
        <div class="bg-gray-50 p-6 rounded-lg h-fit">
          <h2 class="text-xl font-bold text-gray-900 mb-4">Support This Project</h2>
          
          {wishlistData.timeline && (
            <div class="mb-6">
              <div class="text-sm text-gray-600 mb-1">Timeline</div>
              <div class="text-lg font-semibold text-gray-900">{wishlistData.timeline}</div>
            </div>
          )}
          
          <!-- Quick Details -->
          <div class="mb-6 space-y-2 text-sm">
            {wishlistData.urgency && (
              <div class="flex justify-between">
                <span class="text-gray-600">Priority</span>
                <span class={`px-2 py-1 text-xs rounded-full ${urgencyColors[wishlistData.urgency] || urgencyColors.medium}`}>
                  {wishlistData.urgency}
                </span>
              </div>
            )}
            {wishlistData.projectSize && (
              <div class="flex justify-between">
                <span class="text-gray-600">Project Size</span>
                <span class="font-semibold text-gray-800 capitalize">{wishlistData.projectSize}</span>
              </div>
            )}
            {wishlistData.organizationType && (
              <div class="flex justify-between">
                <span class="text-gray-600">Organization Type</span>
                <span class="font-semibold text-gray-800">{wishlistData.organizationType}</span>
              </div>
            )}
            {wishlistData.preferredPractitioner && (
              <div class="flex justify-between">
                <span class="text-gray-600">Preferred Practitioner</span>
                <span class="font-semibold text-gray-800">{wishlistData.preferredPractitioner}</span>
              </div>
            )}
            {wishlistData.nomineeName && (
              <div class="flex justify-between">
                <span class="text-gray-600">Nominated Member</span>
                <span class="font-semibold text-gray-800 flex items-center gap-1">
                  {wishlistData.nomineeName}
                  {wishlistData.nomineeGithub && (
                    <a href={`https://github.com/${wishlistData.nomineeGithub}`} target="_blank" rel="noopener noreferrer" class="text-gray-700 underline hover:text-gray-900">@{wishlistData.nomineeGithub}</a>
                  )}
                </span>
              </div>
            )}
            {wishlistData.openToSponsorship && (
              <div class="flex justify-between">
                <span class="text-gray-600">Honorarium</span>
                <span class="font-semibold text-gray-800">Open to sponsorship</span>
              </div>
            )}
          </div>

          <div class="space-y-3 mb-6">
            <a 
              href={`${basePath}fulfill?issue=${wishlistData.id}`}
              class="btn-sparkle w-full"
            >
              <svg class="btn-sparkle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
              <span class="btn-sparkle-text">Fulfill This Wishlist</span>
              <span class="btn-sparkle-particles">
                <span class="sparkle-particle" style="top: 50%; left: 25%; background-color: rgb(196, 181, 253);"></span>
                <span class="sparkle-particle" style="top: 25%; right: 33%; background-color: rgb(167, 139, 250); animation-delay: 0.12s;"></span>
                <span class="sparkle-particle" style="bottom: 33%; right: 25%; background-color: rgb(217, 213, 254); animation-delay: 0.24s;"></span>
              </span>
            </a>
            {wishlistData.repositoryUrl && (
              <a 
                href={wishlistData.repositoryUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="w-full border border-gray-300 text-gray-700 px-4 py-3 rounded-lg hover:bg-gray-50 transition-colors text-center block"
              >
                View Project
              </a>
            )}
          </div>
          
          <!-- Contact Methods -->
          <div class="border-t pt-4">
            <h3 class="font-semibold text-gray-900 mb-3">Maintainer</h3>
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">GitHub</span>
                <a href={`https://github.com/${wishlistData.maintainer}`} target="_blank" rel="noopener noreferrer" class="text-gray-700 underline hover:text-gray-900">@{wishlistData.maintainer}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Needed -->
  {wishlistData.services && wishlistData.services.length > 0 && (
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Services Needed</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {wishlistData.services.map((serviceSlug: string) => {
            const service = serviceMap.get(serviceSlug);
            return service ? (
              <a 
                href={`${basePath}services/${service.slug}`}
                class="bg-white p-6 rounded-lg border shadow-sm hover:shadow-md transition-shadow block"
              >
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{service.data.title}</h3>
                <p class="text-sm text-gray-600 mb-3">{service.data.description}</p>
                <span class="text-sm text-gray-700 underline hover:text-gray-900">Learn more →</span>
              </a>
            ) : (
              <div class="bg-white p-6 rounded-lg border shadow-sm">
                <h3 class="text-lg font-semibold text-gray-900">{serviceSlug}</h3>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- Resources Needed -->
  {wishlistData.resources && wishlistData.resources.length > 0 && (
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Resources Needed</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {wishlistData.resources.map((resourceSlug: string) => {
            const resource = serviceMap.get(resourceSlug);
            return resource ? (
              <a 
                href={`${basePath}services/${resource.slug}`}
                class="bg-gray-50 p-6 rounded-lg border hover:shadow-md transition-shadow block"
              >
                <h3 class="text-lg font-semibold text-gray-900 mb-2">{resource.data.title}</h3>
                <p class="text-sm text-gray-600 mb-3">{resource.data.description}</p>
                <span class="text-sm text-gray-700 underline hover:text-gray-900">Learn more →</span>
              </a>
            ) : (
              <div class="bg-gray-50 p-6 rounded-lg border">
                <h3 class="text-lg font-semibold text-gray-900">{resourceSlug}</h3>
              </div>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-12 bg-gray-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
  <h2 class="text-3xl font-bold text-white mb-4">Ready to Support {wishlistData.projectName}?</h2>
  <p class="text-xl text-gray-200 mb-8">Help this open source project thrive by fulfilling their wishlist</p>
      <div class="flex justify-center space-x-4">
        <a 
          href={`${basePath}fulfill?issue=${wishlistData.id}`}
          class="btn-sparkle"
        >
          <svg class="btn-sparkle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
          </svg>
          <span class="btn-sparkle-text">Fulfill This Wishlist</span>
          <span class="btn-sparkle-particles">
            <span class="sparkle-particle" style="top: 50%; left: 25%; background-color: rgb(196, 181, 253);"></span>
            <span class="sparkle-particle" style="top: 25%; right: 33%; background-color: rgb(167, 139, 250); animation-delay: 0.12s;"></span>
            <span class="sparkle-particle" style="bottom: 33%; right: 25%; background-color: rgb(217, 213, 254); animation-delay: 0.24s;"></span>
          </span>
        </a>
        <a href={`${basePath}wishlists`} class="border border-gray-300 text-white px-8 py-3 rounded-lg font-semibold hover:bg-gray-800 transition-colors">
          Browse Other Wishlists
        </a>
      </div>
    </div>
  </section>
</Layout>