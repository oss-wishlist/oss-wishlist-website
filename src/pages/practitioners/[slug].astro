---
import Layout from '../../components/Layout.astro';
import { getCollection } from 'astro:content';
import { getBasePath } from '../../lib/paths';
import { getAllPractitioners, getApprovedPractitioners } from '../../lib/db';
import { marked } from 'marked';
import { verifySession } from '../../lib/github-oauth';

export const prerender = false;
const basePath = getBasePath();

// Check if user is logged in
const sessionCookie = Astro.cookies.get('github_session');
const sessionSecret = import.meta.env.OAUTH_STATE_SECRET;
let session = null;
if (sessionCookie?.value) {
  session = verifySession(sessionCookie.value, sessionSecret);
}
const currentUser = session?.user?.login;

// Server-rendered: resolve content dynamically at request time
const { slug } = Astro.params;

// Fetch practitioner from database by slug
const approvedPractitioners = await getApprovedPractitioners();
const practitioner = approvedPractitioners.find(p => p.slug === slug);

// Debug logging for 404 issues
if (!practitioner) {
  console.log(`[practitioners/${slug}] NOT FOUND. Looking for: "${slug}"`);
  console.log(`[practitioners/${slug}] Available approved slugs:`, approvedPractitioners.map(p => `"${p.slug}"`));
  console.log(`[practitioners/${slug}] Total approved: ${approvedPractitioners.length}`);
}

// If practitioner doesn't exist, return 404
if (!practitioner) {
  return Astro.redirect('/404');
}

// Allow owner to view their own unapproved profile
if (!practitioner.approved && practitioner.submitter_username !== currentUser) {
  console.log(`[practitioners/${slug}] Not approved and not owner`);
  return Astro.redirect('/404');
}

// Fetch services to map slugs to titles
const allServices = await getCollection('services');
const practitionerServices = practitioner.services 
  ? practitioner.services
      .map(serviceSlug => {
        const service = allServices.find(s => s.slug === serviceSlug);
        return service ? { slug: serviceSlug, title: service.data.title } : null;
      })
      .filter(Boolean)
  : [];

// Render bio as markdown
const bioHtml = practitioner.bio ? marked(practitioner.bio) : '';
---

<Layout title={`${practitioner.name} - OSS Practitioner`} description={practitioner.bio}>
  {(
    (Astro.locals.user && Astro.locals.user.login && practitioner.github &&
      typeof Astro.locals.user.login === 'string' &&
      Astro.locals.user.login.toLowerCase() === practitioner.github.replace('https://github.com/', '').toLowerCase()) ||
    (Astro.locals.session && Astro.locals.session.user && practitioner.github &&
      typeof Astro.locals.session.user.login === 'string' &&
      Astro.locals.session.user.login.toLowerCase() === practitioner.github.replace('https://github.com/', '').toLowerCase())
  ) && (
    <div class="max-w-4xl mx-auto px-4 py-4">
      <div class="bg-gray-50 border border-gray-300 rounded-lg p-4 mb-6 text-center text-gray-900">
        <strong>To update your profile, use the <a href={`${basePath}edit-practitioner`} class="underline">edit profile page</a>. To delete your profile, email <a href="mailto:info@oss-wishlist.org" class="underline">info@oss-wishlist.org</a></strong>
      </div>
    </div>
  )}
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Practitioner Header -->
    <div class="bg-white rounded-lg shadow-sm border p-8 mb-8">
      <div class="flex flex-col md:flex-row md:items-start space-y-6 md:space-y-0 md:space-x-8">
        {practitioner.avatar_url && (
          <img 
            src={practitioner.avatar_url} 
            alt={practitioner.name}
            class="w-32 h-32 rounded-full object-cover mx-auto md:mx-0"
            loading="lazy"
          />
        )}
        
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">{practitioner.name}</h1>
          <p class="text-xl text-gray-600 mb-2">{practitioner.title}</p>
          {practitioner.company && (
            <p class="text-lg text-gray-600 mb-4">{practitioner.company}</p>
          )}
          
          <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm text-gray-600 mb-4">
            {practitioner.location && (
              <span class="flex items-center">{practitioner.location}</span>
            )}
            {practitioner.years_experience && (
              <span class="flex items-center">{practitioner.years_experience} years experience</span>
            )}
            {practitioner.languages && practitioner.languages.length > 0 && (
              <span class="flex items-center">Language(s): {practitioner.languages.join(', ')}</span>
            )}
          </div>
          
          <div class="flex flex-wrap justify-center md:justify-start gap-2">
            {practitioner.verified && (
              <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium">
                Verified Practitioner
              </span>
            )}
            {practitioner.accepts_pro_bono && (
              <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-medium">
                Pro Bono Available
              </span>
            )}
          </div>
        </div>
      </div>
    </div>

    <div class="grid gap-8 lg:grid-cols-3">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Bio -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4">About</h2>
          <div class="prose max-w-none" set:html={bioHtml}></div>
        </div>

        <!-- Notable Experience -->
        {practitioner.notable_experience && practitioner.notable_experience.length > 0 && (
          <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Notable Experience</h2>
            <ul class="space-y-3">
              {practitioner.notable_experience.map((experience: string) => (
                <li key={experience} class="text-gray-700 flex items-start">
                  <span class="text-gray-600 mr-3 mt-1">â€¢</span>
                  <span>{experience}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <!-- Contact -->
        <div class="bg-white rounded-lg shadow-sm border p-6 mb-6">
          <h3 class="text-lg font-bold text-gray-900 mb-4">Contact</h3>
          <div class="space-y-3">
            {practitioner.website && (
              <a href={practitioner.website} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" fill="none"/><path stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" d="M2 12h20M12 2a15.3 15.3 0 010 20M12 2a15.3 15.3 0 000 20"/></svg>
                Website
              </a>
            )}
            {practitioner.github_username && (
              <a href={`https://github.com/${practitioner.github_username}`} target="_blank" rel="noopener noreferrer" class="flex items-center text-gray-700 hover:text-gray-600">
