---
import Layout from "../components/Layout.astro";
import { getBasePath } from "../lib/paths";
import { getCollection } from "astro:content";

const basePath = getBasePath();
const campaigns = await getCollection("campaigns");
const featured = campaigns.filter(c => c.data.featured);
export const prerender = false;
---

<Layout 
  title="Open Source Helpers - Practitioners & Community Campaigns | OSS Wishlist" 
  description="Connect with expert practitioners and community campaigns supporting open source sustainability. Find professionals offering governance, security, funding, and maintenance services.">
  <section class="max-w-7xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">Join the <span class="text-accent">Community</span> Helping Open Source Sustainability</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Connect with practitioners, campaigns, and community members working together to support open source sustainability.
      </p>
    </header>

    <div class="max-w-4xl mx-auto mb-10 text-gray-700">
      <p>
        <span class="font-semibold">Open Source Wishlist</span> curates specialized services that go beyond everyday operations and have significant long-term impact on project health. Browse our <a href={`${basePath}catalog`} class="underline hover:no-underline text-gray-900">service catalogue</a>, explore practitioners and campaigns below, and join our community to help make open source more sustainable.
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 mb-16">
        <a href={`${basePath}wishlists`} class="block border rounded-lg p-6 bg-white hover:bg-gray-50 transition-colors">
          <h2 class="text-2xl font-semibold text-gray-900 mb-2">Open Source Wishlists</h2>
          <p class="text-gray-700 mb-3">Browse current wishlists from maintainers seeking support. Find wishes you can help fulfill through funding, services, or expertise.</p>
          <span class="badge-pending inline-block px-4 py-2 rounded-lg font-medium">View wishlists →</span>
        </a>
      <a href={`${basePath}practitioners`} class="block border rounded-lg p-6 bg-white hover:bg-gray-50 transition-colors">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">Open Source Practitioners</h2>
        <p class="text-gray-700 mb-3">Browse verified open source practitioners, or join to have your name added. Practitioners are available as part of wish fulfillment at flat rates or pro bono.</p>
        <span class="badge-pending inline-block px-4 py-2 rounded-lg font-medium">View directory →</span>
      </a>
      <a href={`${basePath}browse-sponsors`} class="block border rounded-lg p-6 bg-white hover:bg-gray-50 transition-colors">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">Wishlist Sponsors</h2>
        <p class="text-gray-700 mb-3">Meet the companies, organizations, and individuals funding wishes. These sponsors are directly supporting open source sustainability through wish fulfillment.</p>
        <span class="badge-pending inline-block px-4 py-2 rounded-lg font-medium">View sponsors</span>
      </a>
      <a href={`${basePath}campaigns`} class="block border rounded-lg p-6 bg-white hover:bg-gray-50 transition-colors">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">Campaigns</h2>
        <p class="text-gray-700 mb-3">Join or fund coordinated initiatives that support multiple projects in an ecosystem.</p>
        <span class="badge-pending inline-block px-4 py-2 rounded-lg font-medium">Explore campaigns →</span>
      </a>
      <a href={`${basePath}ai-alignment`} class="block border rounded-lg p-6 bg-white hover:bg-gray-50 transition-colors">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">AI Alignment</h2>
        <p class="text-gray-700 mb-3">Pioneering AI benchmarks for open source sustainability and governance. Join the CHAOSS AI Alignment Working Group.</p>
        <span class="badge-pending inline-block px-4 py-2 rounded-lg font-medium">Learn more →</span>
      </a>
      <div class="block border rounded-lg p-6 bg-white">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">Helper Community</h2>
        <p class="text-gray-700 mb-4">Connect on Slack or follow on GitHub to collaborate on making open source wishes come true.</p>
        <div class="flex flex-wrap gap-3">
          <a href="https://join.slack.com/t/opensourcewishlist/shared_invite/zt-3juhbwcte-w_yUyiZJTbqo5EzKbCGbiQ" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 bg-gray-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-gray-700 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M5.042 15.165a2.528 2.528 0 0 1-2.52 2.523A2.528 2.528 0 0 1 0 15.165a2.527 2.527 0 0 1 2.522-2.52h2.52v2.52zM6.313 15.165a2.527 2.527 0 0 1 2.521-2.52 2.527 2.527 0 0 1 2.521 2.52v6.313A2.528 2.528 0 0 1 8.834 24a2.528 2.528 0 0 1-2.521-2.522v-6.313zM8.834 5.042a2.528 2.528 0 0 1-2.521-2.52A2.528 2.528 0 0 1 8.834 0a2.528 2.528 0 0 1 2.521 2.522v2.52H8.834zM8.834 6.313a2.528 2.528 0 0 1 2.521 2.521 2.528 2.528 0 0 1-2.521 2.521H2.522A2.528 2.528 0 0 1 0 8.834a2.528 2.528 0 0 1 2.522-2.521h6.312zM18.956 8.834a2.528 2.528 0 0 1 2.522-2.521A2.528 2.528 0 0 1 24 8.834a2.528 2.528 0 0 1-2.522 2.521h-2.522V8.834zM17.688 8.834a2.528 2.528 0 0 1-2.523 2.521 2.527 2.527 0 0 1-2.52-2.521V2.522A2.527 2.527 0 0 1 15.165 0a2.528 2.528 0 0 1 2.523 2.522v6.312zM15.165 18.956a2.528 2.528 0 0 1 2.523 2.522A2.528 2.528 0 0 1 15.165 24a2.527 2.527 0 0 1-2.52-2.522v-2.522h2.52zM15.165 17.688a2.527 2.527 0 0 1-2.52-2.523 2.526 2.526 0 0 1 2.52-2.52h6.313A2.527 2.527 0 0 1 24 15.165a2.528 2.528 0 0 1-2.522 2.523h-6.313z"/>
            </svg>
            Join Slack
          </a>
          <a href="https://github.com/oss-wishlist" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 badge-pending px-4 py-2 rounded-lg font-medium hover:opacity-80 transition-opacity">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub Organization
          </a>
        </div>
      </div>
    </div>

    {featured.length > 0 && (
      <div class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Featured Campaigns</h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          {featured.map(c => (
            <a href={`${basePath}campaigns/${c.slug}`} class="block bg-white border rounded-lg p-6 hover:bg-gray-50 transition-colors">
              <h3 class="text-lg font-semibold text-gray-900">{c.data.title}</h3>
              {c.data.organization && <p class="text-sm text-gray-600">{c.data.organization}</p>}
              <p class="text-sm text-gray-700 mt-2 line-clamp-3">{c.data.description}</p>
              <div class="mt-4 text-gray-700 text-sm">View details →</div>
            </a>
          ))}
        </div>
      </div>
    )}
  </section>
</Layout>
