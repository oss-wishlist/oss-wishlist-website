---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const allPractitioners = await getCollection('practitioners');
const allServices = await getCollection('services');
const filteredServices = allServices.filter(s => s.data.type === 'service');

export const prerender = false;

// Get wishlist context from URL parameters
const url = Astro.url;
const wishlistSlug = url.searchParams.get('wishlist');
const projectName = url.searchParams.get('project');

let selectedWishlist = null;
if (wishlistSlug) {
  const wishlists = await getCollection('wishlists');
  selectedWishlist = wishlists.find(w => w.slug === wishlistSlug);
}
---

<Layout title="Open Source Practitioners" description="Connect with verified open source practitioners who can help with your project needs">
  <div class="max-w-7xl mx-auto px-4 py-10">
    <!-- Header -->
    <div class="text-center mb-10">
      {selectedWishlist ? (
        <>
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            <span class="text-accent">Practitioners</span> for {projectName || selectedWishlist.data.project_name}
          </h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Choose a practitioner to hire for the "{projectName || selectedWishlist.data.project_name}" project. 
            Connect directly via GitHub Sponsors or email to get started.
          </p>
        </>
      ) : (
        <>
          <h1 class="text-5xl font-bold text-gray-900 mb-6">Open Source <span class="text-accent">Practitioners</span></h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
           Open source practitioners are experienced subject matter experts in sustainability-critical areas.
          </p>
        </>
      )}
    </div>

  <!-- All Practitioners by Category -->
  <div class="mb-8">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">
        {selectedWishlist ? 'ðŸ‘¥ All Available Practitioners' : 'ðŸ‘¥ All Practitioners'}
      </h2>
      
      <!-- Search and Filter -->
      <div class="flex flex-col sm:flex-row gap-4 mb-8">
        <!-- Search Bar -->
        <div class="flex-1">
          <input 
            type="text" 
            placeholder="Search practitioners..."
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-600 focus:border-gray-600"
            id="practitionerSearch"
          />
        </div>
        
        <!-- Service Filter -->
        <select 
          class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-gray-600 focus:border-gray-600"
          id="serviceFilter"
        >
          <option value="" selected>All Services</option>
          {filteredServices.map(svc => (
            <option value={(svc as any).slug}>{svc.data.title}</option>
          ))}
        </select>
      </div>

      <!-- Pricing Information Note -->
      <div class="mb-8 p-4 bg-gray-50 border border-gray-200 rounded-lg">
        <p class="text-sm text-gray-700">
          <span class="font-semibold">How practitioners are compensated:</span> Practitioners are paid a flat rate depending on the service type and project size. Some hours may be offered pro bono depending on the individual practitioner. <a href={`${basePath}pricing`} class="text-gray-900 underline hover:text-gray-700 font-medium">Learn more about pricing</a>.
        </p>
      </div>

      <!-- Practitioners Grid -->
      <div id="practitionersGrid" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {allPractitioners.map((practitioner) => (
          <div 
            key={practitioner.slug} 
            class="bg-white rounded-lg shadow-sm border p-6 practitioner-card"
            data-name={`${practitioner.data.name} ${practitioner.data.title || ''} ${practitioner.data.company || ''} ${practitioner.data.bio || ''}`.toLowerCase()}
            data-services={(practitioner.data.services || []).join(',')}
          >
            <div class="flex items-start space-x-4 mb-4">
              {practitioner.data.avatar_url && (
                <img 
                  src={practitioner.data.avatar_url} 
                  alt={practitioner.data.name}
                  class="w-12 h-12 rounded-full object-cover"
                  loading="lazy"
                />
              )}
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900">{practitioner.data.name}</h3>
                <p class="text-sm text-gray-600">{practitioner.data.title}</p>
                {practitioner.data.company && (
                  <p class="text-xs text-gray-600">{practitioner.data.company}</p>
                )}
              </div>
            </div>
            
            <p class="text-sm text-gray-700 mb-3 line-clamp-2">{practitioner.data.bio}</p>
            

            
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-2">
                {practitioner.data.verified && (
                  <span class="text-gray-700 text-xs">âœ“ Verified</span>
                )}
                {practitioner.data.accepts_pro_bono && (
                  <span class="text-gray-600 text-xs">Pro Bono</span>
                )}
              </div>
              <div class="flex space-x-2">
                <a 
                  href={`${basePath}practitioners/${practitioner.slug}`}
                  class="text-gray-600 hover:text-gray-700 text-sm font-medium"
                >
                  View â†’
                </a>
                {selectedWishlist && (
                  <a 
                    href={practitioner.data.github ? `https://github.com/sponsors/${practitioner.data.github}` : `mailto:${practitioner.data.email}?subject=${encodeURIComponent(`Hire ${practitioner.data.name} for ${projectName || selectedWishlist.data.project_name}`)}`}
                    target={practitioner.data.github ? "_blank" : "_self"}
                    rel={practitioner.data.github ? "noopener noreferrer" : ""}
                    class="bg-gray-900 text-white px-3 py-1 rounded text-xs font-medium hover:bg-gray-800 transition-colors"
                    title={`Hire ${practitioner.data.name} for ${projectName || selectedWishlist.data.project_name}`}
                  >
                    Hire
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    {selectedWishlist && (
      <div class="bg-gray-100 rounded-lg p-8 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Ready to Hire an Practitioner?</h2>
        <p class="text-gray-600 mb-6">
          Connect "{projectName || selectedWishlist.data.project_name}" with the expertise they need to succeed.
        </p>
        <div class="flex justify-center space-x-4">
          <a 
            href={selectedWishlist.data.repo_url}
            target="_blank"
            rel="noopener noreferrer"
            class="border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
          >
            View Project
          </a>
          <a 
            href={`${basePath}wishlists`}
            class="bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800"
          >
            Browse More Projects
          </a>
        </div>
      </div>
    )}
  </div>

    <!-- Apply CTA (single-page entry point) -->
  <section id="apply" class="mt-8 bg-white border rounded-lg p-6 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Want to join our practitioner network?</h2>
      <p class="text-gray-600 mb-6 max-w-2xl mx-auto">
        Apply to become a verified open source practitioner and be discoverable by maintainers
        looking for paid, pro-bono, or advisory help. We review applications within 5â€“7 business days.
      </p>
      <div class="flex justify-center">
        <a
          href={`${basePath}apply-practitioner`}
          class="bg-gray-900 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-800"
        >
          Apply to be a Practitioner
        </a>
      </div>
    </section>
</Layout>
<script>
  const searchInput = document.getElementById('practitionerSearch');
  const serviceFilter = document.getElementById('serviceFilter');
  const cards = Array.from(document.querySelectorAll('.practitioner-card'));

  function applyFilters() {
    const q = (searchInput.value || '').toLowerCase().trim();
    const service = (serviceFilter.value || '').trim();

    cards.forEach(card => {
      const nameBlob = card.getAttribute('data-name') || '';
      const services = (card.getAttribute('data-services') || '').split(',').filter(Boolean);

      const matchesSearch = q === '' || nameBlob.includes(q);
      const matchesService = service === '' || services.includes(service);

      card.style.display = (matchesSearch && matchesService) ? '' : 'none';
    });
  }

  searchInput?.addEventListener('input', applyFilters);
  serviceFilter?.addEventListener('change', applyFilters);
  // Initialize default selection: if URL has ?service=slug, use it; otherwise default to "All Services"
  (function initServiceFilterDefault() {
    try {
      const params = new URLSearchParams(window.location.search);
      const serviceFromQuery = params.get('service');
      if (serviceFromQuery && serviceFilter?.querySelector(`option[value="${serviceFromQuery}"]`)) {
        serviceFilter.value = serviceFromQuery;
      } else if (serviceFilter) {
        serviceFilter.value = '';
      }
    } catch {}
    applyFilters();
  })();
</script>