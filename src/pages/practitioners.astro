</Layout>
<script>
  const searchInput = document.getElementById('practitionerSearch');
  const serviceFilter = document.getElementById('serviceFilter');
  const cards = Array.from(document.querySelectorAll('.practitioner-card'));

  function applyFilters() {
    const q = (searchInput.value || '').toLowerCase().trim();
    const service = (serviceFilter.value || '').trim();

    cards.forEach(card => {
      const nameBlob = card.getAttribute('data-name') || '';
      const services = (card.getAttribute('data-services') || '').split(',').filter(Boolean);

      const matchesSearch = q === '' || nameBlob.includes(q);
      const matchesService = service === '' || services.includes(service);

      card.style.display = (matchesSearch && matchesService) ? '' : 'none';
    });
  }

  searchInput?.addEventListener('input', applyFilters);
  serviceFilter?.addEventListener('change', applyFilters);
  // Initialize default selection: if URL has ?service=slug, use it; otherwise default to "All Services"
  (function initServiceFilterDefault() {
    try {
      const params = new URLSearchParams(window.location.search);
      const serviceFromQuery = params.get('service');
      if (serviceFromQuery && serviceFilter?.querySelector(`option[value="${serviceFromQuery}"]`)) {
        serviceFilter.value = serviceFromQuery;
      } else if (serviceFilter) {
        serviceFilter.value = '';
      }
    } catch {}
    applyFilters();
  })();

  // Delete practitioner button handler
  const deleteBtn = document.getElementById('delete-practitioner-btn');
  if (deleteBtn) {
    deleteBtn.addEventListener('click', () => {
      if (confirm('Are you sure you want to delete your practitioner profile? This action cannot be undone.')) {
        alert('Please contact info@oss-wishlist.com to request profile deletion.');
      }
    });
  }
</script>