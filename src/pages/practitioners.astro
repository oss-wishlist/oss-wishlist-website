---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';
import { verifySession } from '../lib/github-oauth';

// Check if user is logged in
const sessionCookie = Astro.cookies.get('github_session');
const sessionSecret = import.meta.env.OAUTH_STATE_SECRET;
let session = null;
let userPractitioner = null;

if (sessionCookie?.value) {
  session = verifySession(sessionCookie.value, sessionSecret);
  
  // Check if logged-in user has a practitioner profile
  if (session?.user?.login) {
    const origin = Astro.url.origin;
    const myPractitionerResponse = await fetch(`${origin}${basePath}api/my-practitioner`, {
      headers: {
        'Cookie': `github_session=${sessionCookie.value}`
      }
    });
    if (myPractitionerResponse.ok) {
      const data = await myPractitionerResponse.json();
      if (data.success) {
        userPractitioner = data.practitioner;
      }
    }
  }
}

// Fetch practitioners from database API
const origin = Astro.url.origin;
const practitionersResponse = await fetch(`${origin}${basePath}api/practitioners`);
const practitionersData = await practitionersResponse.json();

// Use practitioners directly from database (no transformation needed)
const allPractitioners = practitionersData.practitioners || [];

const allServices = await getCollection('services');
const filteredServices = allServices.filter(s => s.data.type === 'service');

export const prerender = false;

// Get wishlist context from URL parameters
const url = Astro.url;
const wishlistSlug = url.searchParams.get('wishlist');
const projectName = url.searchParams.get('project');

let selectedWishlist = null;
if (wishlistSlug) {
  // Fetch wishlist from database if needed
  const wishlistResponse = await fetch(`${origin}${basePath}api/wishlist?id=${wishlistSlug}`);
  if (wishlistResponse.ok) {
    const data = await wishlistResponse.json();
    selectedWishlist = data.wishlist;
  }
}
