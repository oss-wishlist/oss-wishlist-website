---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';
import { getCollection } from 'astro:content';

const guardians = await getCollection('guardians');
const sortedGuardians = guardians.sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<Layout title="Browse Sponsors - Open Source Wishlist" description="Discover organizations and individuals supporting the open source ecosystem">
  <!-- Hero Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl font-bold text-gray-900 mb-6">
          Browse <span class="text-gray-600">Open Source Wishlist Sponsors</span>
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Discover organizations, foundations, and individuals supporting the open source ecosystem.
        </p>
      </div>
    </div>
  </section>

  <!-- "Your Company Name Here" Banner Callout -->
  <section class="py-4 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-lg shadow-sm border-2 border-dashed border-gray-300 p-8 hover:border-gray-400 hover:shadow-md transition-all group">
        <div class="flex flex-col md:flex-row items-center justify-between gap-6">
          <div class="flex-1 text-center md:text-left">
            <div class="flex items-center justify-center md:justify-start mb-3">
              <svg class="w-8 h-8 text-gray-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              <h3 class="text-2xl font-bold text-gray-900">Your Name Here</h3>
            </div>
            <p class="text-gray-600 text-lg">
              Join these organizations in supporting open source. Browse wishlists and fund the projects that matter to your business.
            </p>
          </div>
          <div class="flex-shrink-0">
            <a 
              href={`${basePath}wishlists`}
              class="btn-sparkle"
              aria-label="Browse wishlists to fund"
            >
              <svg class="btn-sparkle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
              <span class="btn-sparkle-text">Browse Wishlists</span>
              <span class="btn-sparkle-particles">
                <span class="sparkle-particle" style="top: 50%; left: 25%; background-color: rgb(196, 181, 253);"></span>
                <span class="sparkle-particle" style="top: 25%; right: 33%; background-color: rgb(167, 139, 250); animation-delay: 0.1s;"></span>
                <span class="sparkle-particle" style="bottom: 33%; right: 25%; background-color: rgb(217, 213, 254); animation-delay: 0.2s;"></span>
              </span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- All Sponsors Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Sponsors Grid -->
      <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        {sortedGuardians.map((guardian) => (
          <div key={guardian.slug} class="bg-white rounded-lg shadow-sm border p-6 hover:shadow-md transition-shadow">
            <div class="flex items-start space-x-4 mb-4">
              {guardian.data.logo_url && (
                <img 
                  src={guardian.data.logo_url} 
                  alt={guardian.data.name}
                  class="w-12 h-12 object-contain"
                  loading="lazy"
                />
              )}
              <div class="flex-1">
                <h3 class="font-semibold text-gray-900 text-lg mb-1">{guardian.data.name}</h3>
                <p class="text-sm text-gray-600 capitalize">{guardian.data.type}</p>
              </div>
            </div>
            
            <p class="text-sm text-gray-700 mb-4 line-clamp-2">{guardian.data.description}</p>
            
            <div class="flex flex-wrap gap-1 mb-4">
              {guardian.data.focus_areas.slice(0, 2).map((area) => (
                <span key={area} class="inline-block bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                  {area}
                </span>
              ))}
            </div>
            
            <div class="flex items-center">
              {guardian.data.verified && (
                <div class="flex items-center text-gray-700 text-xs">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  Verified
                </div>
              )}
            </div>
          </div>
        ))}
      </div>

      {sortedGuardians.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-600">No sponsors yet. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Interested in Becoming a Sponsor?</h2>
      <p class="text-xl text-gray-600 mb-8">
        Support open source projects through targeted funding and make a real impact on the ecosystem.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href={`${basePath}wishlists`}
          class="inline-block badge-pending px-8 py-3 rounded-lg font-semibold hover:opacity-80 transition-opacity"
        >
          Browse Wishlists to Fund
        </a>
        <a 
          href={`${basePath}apply-sponsor`}
          class="inline-block bg-white text-gray-700 border border-gray-300 px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-colors"
        >
          Become a Sponsor
        </a>
      </div>
    </div>
  </section>
</Layout>
