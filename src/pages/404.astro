---
import Layout from '../components/Layout.astro';
import { getBasePath } from '../lib/paths';

const basePath = getBasePath();
const logoUrl = `${basePath}images/ecosystems.svg`;
---

<Layout 
  title="Page Not Found - OSS Wishlist" 
  description="The page you're looking for doesn't exist."
>
  <div class="min-h-screen flex flex-col items-center justify-center px-4 py-16">
    <!-- Logo -->
    <div class="mb-12">
      <img 
        src={logoUrl} 
        alt="Open Source Wishlist logo" 
        class="h-24 w-24 opacity-80 hover:opacity-100 transition-opacity"
      />
    </div>

    <!-- 404 Content -->
    <div class="text-center max-w-md">
      <!-- Big Error Code -->
      <div class="mb-6">
        <h1 class="text-9xl font-bold text-gray-900 tracking-tight">404</h1>
      </div>

      <!-- Error Message -->
      <h2 class="text-3xl font-bold text-gray-900 mb-4">
        Page Not Found
      </h2>
      
      <p class="text-lg text-gray-600 mb-8">
        Oops! We couldn't find the page you're looking for. It may have been moved, deleted, or the URL might be incorrect.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href={`${basePath}`}
          class="btn-sparkle px-8 py-3 text-center"
        >
          <svg class="btn-sparkle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12a9 9 0 1 1 9-9m.464 9.464l-5.657-5.657" />
          </svg>
          <span class="btn-sparkle-text">Go Home</span>
          <span class="btn-sparkle-particles">
            <span class="sparkle-particle" style="top: 50%; left: 25%; background-color: rgb(196, 181, 253);"></span>
            <span class="sparkle-particle" style="top: 20%; left: 60%; background-color: rgb(167, 139, 250);"></span>
            <span class="sparkle-particle" style="top: 70%; left: 75%; background-color: rgb(217, 213, 254);"></span>
          </span>
        </a>
        
        <a 
          href={`${basePath}wishlists`}
          class="inline-flex items-center justify-center badge-pending px-8 py-3 rounded-lg font-semibold hover:opacity-80 transition-opacity"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h6a2 2 0 012 2v12a2 2 0 01-2 2H7a2 2 0 01-2-2V5z" />
          </svg>
          Browse Wishlists
        </a>
      </div>
    </div>

    <!-- Help Text -->
    <div class="mt-16 pt-12 border-t border-gray-200 text-center max-w-md">
      <p class="text-sm text-gray-500 mb-4">
        Need help? Here are some popular links:
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={`${basePath}catalog`} class="text-sm text-gray-600 hover:text-gray-900 hover:underline">
          Services
        </a>
        <span class="text-gray-300">•</span>
        <a href={`${basePath}wishlists`} class="text-sm text-gray-600 hover:text-gray-900 hover:underline">
          Wishlists
        </a>
        <span class="text-gray-300">•</span>
        <a href={`${basePath}practitioners`} class="text-sm text-gray-600 hover:text-gray-900 hover:underline">
          Practitioners
        </a>
        <span class="text-gray-300">•</span>
        <a href={`${basePath}faq`} class="text-sm text-gray-600 hover:text-gray-900 hover:underline">
          FAQ
        </a>
      </div>
    </div>
  </div>
</Layout>
