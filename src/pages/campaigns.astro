---
import Layout from "../components/Layout.astro";
import { getBasePath } from "../lib/paths";
import { getCollection } from "astro:content";

const basePath = getBasePath();
const campaigns = await getCollection("campaigns");
export const prerender = false;
---

<Layout title="Campaigns" description="Coordinated initiatives that help multiple open source projects.">
  <section class="max-w-7xl mx-auto px-4 py-16">
    <header class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        <span style="background: linear-gradient(135deg, rgb(147,51,234) 0%, rgb(109,40,217) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Campaigns</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Fund or join campaigns that support security, governance, documentation, and other sustainability needs across ecosystems.
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {campaigns.map(c => (
        <a href={`${basePath}campaigns/${c.slug}`} class="block bg-white border rounded-lg p-6 hover:bg-gray-50 transition-colors">
          <h2 class="text-xl font-semibold text-gray-900">{c.data.title}</h2>
          {c.data.organization && <p class="text-sm text-gray-600">{c.data.organization}</p>}
          <p class="text-sm text-gray-700 mt-2 line-clamp-4">{c.data.description}</p>
          <div class="mt-4">
            <span class="badge-pending inline-block px-4 py-2 rounded-lg text-sm font-medium">View details â†’</span>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
