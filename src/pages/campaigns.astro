---
import Layout from "../components/Layout.astro";
import { getBasePath } from "../lib/paths";
import { getCollection } from "astro:content";

const basePath = getBasePath();
const campaigns = await getCollection("campaigns");
export const prerender = false;
---

<Layout title="Campaigns" description="Coordinated initiatives that help multiple open source projects.">
  <section class="max-w-7xl mx-auto px-4 py-12">
    <header class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-4"><span class="text-accent">Campaigns</span></h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Fund or join campaigns that support security, governance, documentation, and other sustainability needs across ecosystems.
      </p>
    </header>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {campaigns.map(c => (
        <a href={`${basePath}campaigns/${c.slug}`} class="block bg-white border rounded-lg p-6 hover:bg-gray-50 transition-colors">
          <h2 class="text-xl font-semibold text-gray-900">{c.data.title}</h2>
          {c.data.organization && <p class="text-sm text-gray-600">{c.data.organization}</p>}
          <p class="text-sm text-gray-700 mt-2 line-clamp-4">{c.data.description}</p>
          <div class="mt-4 text-gray-700 text-sm">View details â†’</div>
        </a>
      ))}
    </div>
  </section>
</Layout>
