---
import { getBasePath } from '../lib/paths';
const basePath = getBasePath();
import Layout from '../components/Layout.astro';

export const prerender = false;
---

<Layout title="Practitioner Community Calendar" description="Join us for upcoming workshops, office hours, and community events">
  <div class="max-w-7xl mx-auto px-4 py-10">
    
    <!-- Header -->
    <div class="text-center mb-10">
      <h1 class="text-5xl font-bold text-gray-900 mb-6">
        Practitioner Community <span class="text-accent">Calendar</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-6">
        Join us for workshops, office hours, and community events. Connect with practitioners and maintainers in real-time.
      </p>
      <a 
        href={`${basePath}practitioners`}
        class="inline-flex items-center text-gray-600 hover:text-purple-600 font-medium transition-colors"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Practitioners
      </a>
    </div>

    <!-- Calendar Embed -->
    <div class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
      <div class="flex justify-center">
        <div class="w-full" style="max-width: 900px;">
          <iframe
            src="https://luma.com/embed/calendar/cal-UKTU3T5iJaB28YN/events"
            width="100%"
            height="600"
            frameborder="0"
            style="border: 1px solid #d1d5db; border-radius: 8px;"
            allowfullscreen=""
            aria-hidden="false"
            tabindex="0"
            title="OSS Wishlist Community Calendar"
          ></iframe>
        </div>
      </div>
    </div>

  </div>
</Layout>
