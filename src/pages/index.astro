---
import Layout from '../components/Layout.astro';
import PlaceholderPage from '../components/PlaceholderPage.astro';
import { getCollection } from 'astro:content';
import { getBasePath } from '../lib/paths';
export const prerender = false;

// Check if site is in placeholder mode
const basePath = getBasePath();
const siteMode = import.meta.env.PUBLIC_SITE_MODE || 'full';
const isPlaceholder = siteMode === 'placeholder';

const services = await getCollection('services');
const featuredServices = [] as typeof services;
const maintainerServices = services.filter(service => 
  service.data.target_audience === 'maintainer' || service.data.target_audience === 'both'
);
const companyServices = services.filter(service => 
  service.data.target_audience === 'company' || service.data.target_audience === 'both'
);
---

<Layout title="Open Source Wishlist - Connect projects with sustainability support" showHeader={!isPlaceholder}>
  {isPlaceholder ? (
    <PlaceholderPage />
  ) : (
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20" aria-labelledby="hero-heading">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="max-w-4xl mx-auto">
        <h1 id="hero-heading" class="text-5xl font-bold text-gray-950 mb-4">
          Make open source <span class="text-accent">sustainability</span> a reality
        </h1>
        <p class="text-2xl font-medium text-gray-700 mb-8">
          See what your dependencies actually need. Sponsor the work. Track measurable impact.
        </p>
        
        <!-- Audience Selection -->
        <div class="grid md:grid-cols-3 gap-6 mb-8" role="list">
          <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">Open Source Maintainers</h2>
            <p class="text-gray-700 mb-4 flex-grow">Create a wishlist of available services to address current gaps and support your project's long-term sustainability.</p>
            <a 
              href={`${basePath}maintainers`} 
              class="bg-gray-700 text-white px-6 py-3 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 transition-colors block text-center min-h-[44px] flex items-center justify-center font-medium"
              aria-label="Create your wishlist as a maintainer"
            >
              Create Your Wishlist
            </a>
          </article>
          
          <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">Wishlist Sponsors</h2>
            <p class="text-gray-700 mb-4 flex-grow">Strategically fund sustainabiltiy  in projects you depend on. See exactly how your support creates impact.</p>
            <a 
              href={`${basePath}wishlists`}
              class="btn-sparkle w-full"
              aria-label="Browse wishlists to fulfill"
            >
              <svg class="btn-sparkle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
              </svg>
              <span class="btn-sparkle-text">Fulfill a Wish</span>
              <span class="btn-sparkle-particles">
                <span class="sparkle-particle" style="top: 50%; left: 25%; background-color: rgb(196, 181, 253);"></span>
                <span class="sparkle-particle" style="top: 25%; right: 33%; background-color: rgb(167, 139, 250); animation-delay: 0.1s;"></span>
                <span class="sparkle-particle" style="bottom: 33%; right: 25%; background-color: rgb(217, 213, 254); animation-delay: 0.2s;"></span>
              </span>
            </a>
          </article>
          
          <article class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex flex-col" role="listitem">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">Helper Community</h2>
            <p class="text-gray-700 mb-4 flex-grow">Get matched with wishes, share or contribute to campaigns, challenge and include others.</p>
            <a 
              href={`${basePath}helpers`} 
              class="bg-gray-700 text-white px-6 py-3 rounded-lg hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-gray-600 focus:ring-offset-2 transition-colors block text-center min-h-[44px] flex items-center justify-center font-medium"
              aria-label="Join the helper community"
            >
              Join In
            </a>
          </article>
        </div>
        
        <!-- Dependency Report Link - Below Cards -->
        <div class="flex justify-center mt-4">
          <a 
            href={`${basePath}dependency-action`}
            class="link-secondary"
            aria-label="View GitHub Action to see wishlists in your dependencies"
          >
            <svg class="w-5 h-5 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
            </svg>
            See wishlists in your dependencies
            <svg class="w-4 h-4 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
        </div>
      </div>
    </div>
  </section>
  )}
</Layout>
```