---
import Layout from '../components/Layout.astro';
import { SITE_TITLE } from '../config/app';
import { getBasePath } from '../lib/paths';
import { getAvailableProviders } from '../lib/oauth/registry.js';

const basePath = getBasePath();

// If already logged in, redirect to where they were trying to go
const user = Astro.locals.user;
const returnTo = Astro.url.searchParams.get('returnTo') || basePath;

if (user) {
  return Astro.redirect(returnTo);
}

// Get available OAuth providers
const availableProviders = getAvailableProviders();
const hasGitHub = availableProviders.some(p => p.name === 'github');
const hasGitLab = availableProviders.some(p => p.name === 'gitlab');
---

<Layout title={`Sign In - ${SITE_TITLE}`}>
  <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 px-4">
    <div class="max-w-md w-full">
  <div class="bg-white rounded-2xl shadow-xl p-8 space-y-8 border border-gray-200">
        {/* Header */}
        <div class="text-center">
          <h1 class="text-3xl font-bold text-gray-900 mb-2 tracking-tight">
            Welcome to {SITE_TITLE}
          </h1>
          <p class="text-gray-600">
            Sign in to create, view and fulfill wishlists
          </p>
        </div>

        {/* Sign in buttons */}
        <div class="space-y-4" role="group" aria-label="Sign in options">
          {hasGitHub && (
            <a
              href={`${basePath}api/auth/github?returnTo=${encodeURIComponent(returnTo)}`}
              class="w-full flex items-center justify-center gap-3 bg-gray-800 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
              aria-label="Sign in with GitHub"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>Sign in with GitHub</span>
            </a>
          )}

          {hasGitLab && (
            <a
              href={`${basePath}api/auth/gitlab?returnTo=${encodeURIComponent(returnTo)}`}
              class="w-full flex items-center justify-center gap-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
              aria-label="Sign in with GitLab"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M23.6004 9.5927l-.0337-.0862L20.3.9814a.851.851 0 0 0-.3362-.405.8748.8748 0 0 0-.9997.0539.8748.8748 0 0 0-.29.4399l-2.2055 6.748H7.5375l-2.2057-6.748a.8573.8573 0 0 0-.29-.4412.8748.8748 0 0 0-.9997-.0537.8585.8585 0 0 0-.3362.4049L.4332 9.5015l-.0325.0862a6.0657 6.0657 0 0 0 2.0119 7.0105l.0113.0087.03.0213 4.976 3.7264 2.462 1.8633 1.4995 1.1321a1.0085 1.0085 0 0 0 1.2197 0l1.4995-1.1321 2.4619-1.8633 5.006-3.7489.0125-.01a6.0682 6.0682 0 0 0 2.0094-7.003z"/>
              </svg>
              <span>Sign in with GitLab</span>
            </a>
          )}

          {/* Info text */}
          <p class="text-sm text-gray-500 text-center">
            We only request access to your basic profile information
          </p>
          
          {/* Auth provider note */}
          {(hasGitHub || hasGitLab) && (
            <div class="bg-gray-50 border border-gray-200 rounded-lg p-3 text-center">
              <p class="text-xs text-gray-600">
                {hasGitHub && hasGitLab ? (
                  <><strong>Choose your provider:</strong> Sign in with GitHub or GitLab to get started. More authentication options coming soon!</>
                ) : (
                  <><strong>Note:</strong> For this initial pilot, we are using {hasGitHub ? 'GitHub' : 'GitLab'} authentication with plans to expand to other authentication providers. Thanks for understanding!</>
                )}
              </p>
            </div>
          )}
        </div>

        {/* Why sign in section */}
        <div class="border-t pt-6 space-y-3">
          <h2 class="font-semibold text-gray-800 text-sm uppercase tracking-wide">
            Why Sign In?
          </h2>
          <ul class="space-y-2 text-sm text-gray-600" role="list">
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-gray-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>Create and manage wishlists for your open source projects</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-gray-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>Connect with helpers who can assist your project</span>
            </li>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-gray-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              <span>Track progress on your project's needs</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</Layout>
